{
  "name": "allolib-studio-tests",
  "version": "1.0.0",
  "description": "Comprehensive test suite for AlloLib Studio Online rendering pipelines",
  "scripts": {
    "test": "playwright test",
    "test:webgl2": "playwright test --project=chromium-webgl2 --project=firefox-webgl2",
    "test:webgpu": "playwright test --project=chromium-webgpu",
    "test:all": "playwright test",
    "test:headed": "playwright test --headed",
    "test:debug": "playwright test --debug",
    "test:ui": "playwright test --ui",
    "test:compilation": "ts-node scripts/test-compilation.ts",
    "test:local": "ts-node scripts/local-test-runner.ts",
    "test:examples": "ts-node scripts/test-all-examples.ts",
    "test:examples:webgl2": "ts-node scripts/test-all-examples.ts --backend webgl2",
    "test:examples:webgpu": "ts-node scripts/test-all-examples.ts --backend webgpu",
    "test:examples:both": "ts-node scripts/test-all-examples.ts --backend both",
    "test:pipeline": "playwright test all-examples-pipeline-test",
    "test:pipeline:webgl2": "playwright test all-examples-pipeline-test --project=chromium-webgl2",
    "test:pipeline:webgpu": "playwright test all-examples-pipeline-test --project=chromium-webgpu",
    "test:pipeline:both": "playwright test all-examples-pipeline-test --project=chromium-webgl2 && playwright test all-examples-pipeline-test --project=chromium-webgpu",
    "test:visual": "playwright test visual-regression",
    "test:visual:update": "UPDATE_BASELINES=true playwright test visual-regression",
    "report": "playwright show-report test-results/html-report",
    "dashboard": "ts-node scripts/local-test-runner.ts --dashboard",
    "lint": "eslint . --ext .ts"
  },
  "devDependencies": {
    "@playwright/test": "^1.40.0",
    "@types/node": "^20.10.0",
    "@types/pngjs": "^6.0.5",
    "chalk": "^5.3.0",
    "commander": "^11.1.0",
    "express": "^4.18.2",
    "open": "^10.0.0",
    "ora": "^8.0.1",
    "pngjs": "^7.0.0",
    "ts-node": "^10.9.2",
    "typescript": "^5.3.0",
    "ws": "^8.14.2"
  }
}
