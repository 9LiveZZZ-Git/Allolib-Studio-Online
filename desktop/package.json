{
  "name": "allolib-studio-desktop",
  "version": "0.1.0",
  "description": "AlloLib Studio - Creative coding environment for audio-visual applications",
  "main": "dist/main.js",
  "author": {
    "name": "AlloLib Studio Team",
    "email": "allolib@example.com"
  },
  "license": "MIT",
  "homepage": "https://github.com/9LiveZZZ-Git/Allolib-Studio-Online",
  "repository": {
    "type": "git",
    "url": "https://github.com/9LiveZZZ-Git/Allolib-Studio-Online.git"
  },
  "scripts": {
    "start": "electron .",
    "dev": "tsc && electron .",
    "build": "tsc",
    "pack": "electron-builder --dir",
    "dist": "electron-builder",
    "dist:win": "electron-builder --win",
    "dist:mac": "electron-builder --mac",
    "dist:linux": "electron-builder --linux",
    "dist:all": "electron-builder --win --mac --linux",
    "release": "electron-builder --publish always",
    "postinstall": "electron-builder install-app-deps"
  },
  "dependencies": {
    "electron-updater": "^6.1.7",
    "electron-store": "^8.1.0",
    "express": "^4.18.2",
    "cors": "^2.8.5",
    "ws": "^8.16.0"
  },
  "devDependencies": {
    "electron": "^28.1.0",
    "electron-builder": "^24.9.1",
    "typescript": "^5.3.3",
    "@types/node": "^20.10.6",
    "@types/express": "^4.17.21",
    "@types/cors": "^2.8.17",
    "@types/ws": "^8.5.10"
  },
  "build": {
    "appId": "com.allolib.studio",
    "productName": "AlloLib Studio",
    "copyright": "Copyright Â© 2024 AlloLib Studio Team",
    "directories": {
      "output": "release",
      "buildResources": "resources"
    },
    "files": [
      "dist/**/*",
      "resources/**/*",
      "!resources/*.md"
    ],
    "extraResources": [
      {
        "from": "../frontend/dist",
        "to": "frontend",
        "filter": ["**/*"]
      },
      {
        "from": "../backend/dist",
        "to": "backend",
        "filter": ["**/*"]
      },
      {
        "from": "../backend/src",
        "to": "backend-src",
        "filter": ["**/*"]
      }
    ],
    "publish": {
      "provider": "github",
      "owner": "9LiveZZZ-Git",
      "repo": "Allolib-Studio-Online",
      "releaseType": "release"
    },
    "win": {
      "target": [
        {
          "target": "nsis",
          "arch": ["x64"]
        },
        {
          "target": "zip",
          "arch": ["x64"]
        }
      ],
      "icon": "resources/icon.ico",
      "artifactName": "${productName}-Setup-${version}.${ext}"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "installerIcon": "resources/icon.ico",
      "uninstallerIcon": "resources/icon.ico",
      "installerHeaderIcon": "resources/icon.ico",
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true,
      "shortcutName": "AlloLib Studio"
    },
    "mac": {
      "target": [
        {
          "target": "dmg",
          "arch": ["x64", "arm64"]
        },
        {
          "target": "pkg",
          "arch": ["x64", "arm64"]
        }
      ],
      "icon": "resources/icon.icns",
      "category": "public.app-category.developer-tools",
      "artifactName": "${productName}-${version}-${arch}.${ext}"
    },
    "dmg": {
      "contents": [
        {
          "x": 130,
          "y": 220
        },
        {
          "x": 410,
          "y": 220,
          "type": "link",
          "path": "/Applications"
        }
      ]
    },
    "linux": {
      "target": [
        {
          "target": "AppImage",
          "arch": ["x64"]
        },
        {
          "target": "deb",
          "arch": ["x64"]
        }
      ],
      "icon": "resources/icons",
      "category": "Development",
      "artifactName": "${productName}-${version}.${ext}"
    }
  }
}
